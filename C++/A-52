#include <cstdlib>
#include <iostream>

using namespace std;

int main(){
    int vetor[8];
    int i, j=0;
    
    for(i=0; i<8; i++){
        cout << "Digite o " << i+1 << " valor: ";
        cin >> vetor[i];
    }
    cout << endl;
    cout << "Os valores digitados sao: ";
    for(i=0; i<8; i++){
        if(vetor[i] % 3 == 0 && vetor[i] != 0){
            cout << " " << vetor[i] << " -";
            j++;
        }
    }
    cout << endl;
    cout << "A quantidade de valores digitados e: " << j << "." << endl;
    cout << endl;
}

