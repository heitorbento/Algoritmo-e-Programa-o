#include <cstdlib>
#include <iostream>

using namespace std;

int main() {
    int vetor[15];
    int i, m=0, j=0, k=0;
    for(i=0; i<15; i++){
        cout << "Digite o " << i+1 << " valor do vetor: ";
        cin >> vetor[i];
        if(vetor[i] == 4){
            j++;
        }
        
    }
    for(i=0; i<15; i++){
        m +=vetor[i];
    }
    
    m = m /15;
    for(i=0; i<15; i++){
        if(vetor[i] > m){
            k++;
        }
    }
    cout << endl;
    cout << "A media de valores digitados e: " << m;
    cout << endl;
    cout << "A quantidade de valores iguais a quatro e: " << j;
    cout << endl;
    cout << "A quantidade de valores maiores que a media e: " << k;
    cout << endl;
    cout << endl;
}
