#include <cstdlib>
#include <iostream>
using namespace std;

int main(int argc, char** argv) {
    int i, n, f=0;
    for (i = 1; i <= 15; i++){
        cout << "Informe um numero:";
        cin >> n;
        
        if(n < 0){
            f++;
        }
    }
    cout << "A quantidade de numeros negativos digitados foi: " << f << endl;
}

