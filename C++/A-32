#include <cstdlib>
#include <iostream>
using namespace std;

int main(int argc, char** argv) {
    
    char nome[25];
    double valor, desconto, vf;
    
    cout << "Informe o nome do produto: ";
    cin >> nome;
    cout << "Informe o valor do produto: ";
    cin >> valor;
    
    desconto = valor * 0.13;
    vf = valor - desconto;
    
    cout << "Produto: " << nome << endl;
    cout << "Valor: " << valor << endl;
    cout << "Desconto: " << desconto << endl;
    cout << "Valor: " << vf << endl;
}

