#include <cstdlib>
#include <iostream>
using namespace std;

int main(int argc, char** argv) {
    int n, i, res;
    
    cout << "Informe um numero para que seja apresentada a Tabuada: ";
    cin >> n;
    cout << endl;
    cout << endl;
    
    if(n < 10){
        cout << "Tabuada do " << n << endl;
        cout << "*************" << endl;
        
        for (i = 1; i <= 10; i++){
            res = i * n;
            cout << i << "  X  " << n << "  =  " << res << endl;
        }
        
        cout << "*************" << endl;
        cout << endl;
        cout << endl;
    }else{
        cout << endl;
    }
        
    return 0;
}

