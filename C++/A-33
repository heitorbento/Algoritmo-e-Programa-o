#include <cstdlib>
#include <iostream>
using namespace std;

int main(int argc, char** argv) {

    int numero;
    
    cout << "Informe um numero: ";
    cin >> numero;
    
    if(numero >= 0){
        cout << "Seu numero e POSITIVO!!!" << endl;
    }else{
        if(numero < 0){
            cout << "Seu numero e NEGATIVO!!!" << endl;
        }
    }
}

