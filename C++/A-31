#include <cstdlib>
#include <iostream>
#include <cmath>
using namespace std;

int main(int argc, char** argv) {
    float raio, area, perimetro;
    
    cout << "Informe o raio: ";
    cin >> raio;
    
    perimetro = 2 * (3.14 * raio);
    area = 3.14 * pow(raio,2);
    
    cout << "Seu perimetro sera: " << perimetro << endl;
    cout << "Sua area sera: " << area << endl;
}
